<div class="sign-up-form">

<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_name, required: true, autofocus: true, class: "form-control", placeholder: "Username" %>
    <%= f.input :email, required: true, class: "form-control", placeholder: "Email" %>
    <%= f.input :password, required: true, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, placeholder: "Repeat Password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>